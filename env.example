# Database Configuration
# Choose your database provider: firebase, supabase, or postgres
VITE_DATABASE_PROVIDER=firebase

# Firebase Configuration (when using firebase provider)
# Get these values from your Firebase Console (Project Settings > General > Your apps)
# Follow the setup guide in FIREBASE_SETUP.md for detailed instructions
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Optional: Google Analytics (if enabled in Firebase project)
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Supabase Configuration (when using supabase provider)
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# PostgreSQL Configuration (when using postgres provider)
# For local development or direct PostgreSQL connection
VITE_POSTGRES_HOST=localhost
VITE_POSTGRES_PORT=5432
VITE_POSTGRES_DATABASE=survey_db
VITE_POSTGRES_USERNAME=survey_user
VITE_POSTGRES_PASSWORD=your-password-here
VITE_POSTGRES_SSL=false

# Admin Panel Configuration
# Set a secure password for accessing the admin panel to download survey data
# This should be stored as a GitHub secret in production
VITE_ADMIN_PASSWORD=your-secure-admin-password-here

# reCAPTCHA Configuration
# Get your site key from Google reCAPTCHA Console (https://www.google.com/recaptcha/admin)
# This is the public site key that will be used in the frontend
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here 